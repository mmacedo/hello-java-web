<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
  http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1">
  <servlet>
    <servlet-name>resource</servlet-name>
    <servlet-class>com.michelpm.ServeStaticServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>resource</servlet-name>
    <url-pattern>/resource</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>servlet</servlet-name>
    <servlet-class>com.michelpm.HelloWorldServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>servlet</servlet-name>
    <url-pattern>/servlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>jsperror</servlet-name>
    <servlet-class>com.michelpm.ExceptionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>jsperror</servlet-name>
    <url-pattern>/jsperror</url-pattern>
  </servlet-mapping>
  <error-page>
    <exception-type>com.michelpm.HelloWorldException</exception-type>
    <location>/WEB-INF/jsperror/error.html</location>
  </error-page>
</web-app>
